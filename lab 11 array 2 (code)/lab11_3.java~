/*Task 3:Write a program which reads 5 numbers into an array and prints the smallest and largest number and their 
location in the array.*/

class lab11_3 {
    public static void main (String[] args) {
      
      int a[]=new int[5]; 
      
      for (int i=0 ; i<marks.length ; i++)
      {
          Scanner scan = new Scanner(System.in);
          System.out.println("Enter Values For Store in Array");
          a[i]=scan.nextInt();
      }
        int max = a[0];
        int min = a[0];
        int s=0; l=0;
        
        for (int i=0 ; i<marks.length ; i++)
        { 
            if (max<a[i])
            {
                max=a[i];
                l=i;
            }
            if (min>a[i])
            {
                min=a[i];
                s=i;
            }
        }
        System.out.println("The largest Number is "+max+" and its Location is "+l);
        System.out.println("The Smallest Number is:"+min+" and its location is "+s);
    }
}
